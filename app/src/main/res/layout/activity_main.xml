<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="edu.niu.z1783546.helloapp.MainActivity">

    <TextView
        android:id="@+id/textViewHello"
        android:text="@string/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dustyRose"
        android:textSize="60sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/btnExclam"
        android:layout_height="wrap_content"
        android:src="@drawable/adelelionel"
        android:layout_below="@+id/textViewHello"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnExclamstr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exclamationbtnstr"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnExclam"
        android:background="@drawable/exclamationbtn"
        android:textSize="20sp" />
</RelativeLayout>
